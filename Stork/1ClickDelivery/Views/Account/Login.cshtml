@using _1ClickDelivery.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<style>

    .loginInfo .panel-heading {
        border-bottom: none !important;
        padding: 20px 15px 10px !important;
    }

        .loginInfo .panel-heading .panel-title {
            font-size: 16px;
            font-weight: 700 !important;
            letter-spacing: 0;
            font-family: 'Montserrat', 'Roboto', Arial, sans-serif;
            color: #444 !important;
        }


    .panel-body, .modal-body .panel-body-warning {
        padding: 15px;
    }

    .loginInfo.old {
        border: none !important;
        background-color: #fff;
    }

    .loginInfo {
        margin-top: 20px;
    }

        .loginInfo.old .panel-heading, .loginInfo.old .panel {
            background-color: #fff;
            color: #0277bd;
            border: 1px solid #ccc;
            border-top: 5px solid #0277bd;
            padding: 15px;
        }

        .loginInfo.old .panel-body, .loginInfo.old .modal-body .panel-body-warning, .modal-body .loginInfo.old .panel-body-warning {
            border: 1px solid #ccc;
            border-top: none;
        }

        .loginInfo.old .checkbox label {
            font-size: 12px;
            padding-left: 0;
        }

        .loginInfo.old .checkbox label {
            font-size: 12px;
            padding-left: 0;
        }

        .loginInfo.old a {
            font-size: 12px;
        }


    .btn-primary {
        background-color: #0277bd !important;
        border-color: #0277bd !important;
    }

        .btn-primary.create {
            background-color: #73ca6b !important;
            border-color: #73ca6b !important;
        }


</style>
<div class="container " style="padding-top:180px">
   
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-8 hidden-sm hidden-xs">
                            <div class="wow fadeInDown" data-wow-offset="0" data-wow-delay="0.1s">
                                <h2 class="h-ultra">Book Now</h2>
                            </div>
                            <div class="well well-trans" style="padding-bottom:1px;border: 1px solid #ccc;border-left: 5px solid #004AAD;">
                                <div class="wow fadeInRight" data-wow-delay="0.1s">
                                    <ul class="lead-list">
                                        <li>
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    @*<h6 class="h-medium">Book Now</h6>*@
                                                </div>
                                                <div id="forFont">
                                                    <div class="col-xs-6">
                                                        <p>You can either call, text or login to schedule a pickup date of your parcel.</p>
                                                    </div>
                                                    <div class="col-xs-3">
                                                        <div class="">
                                                            <img src="~/img/photo/1.png" alt="Call" style="height:auto;" width="113">
                                                            <p style="margin-bottom:0px;color:#3288c4"><b id="bol" style="color:#676767;">Call</b><br />(02)705 1071 <span style="color:#676767;">or</span><br />0923-180-7478</p>


                                                        </div>
                                                    </div>
                                                    <div class="col-xs-3">
                                                        <div class="">
                                                            <img src="~/img/photo/2.png" alt="Text" style="height:auto;" width="113">
                                                            <p style="margin-bottom:0px;color:#3288c4"><b id="bol" style="color:#676767;">Text</b><br />0917-538-8126</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-md-4 col-md-offset-0   col-sm-offset-3 col-sm-6 col-xs-12">
                                <div class="panel panel-default loginInfo old">
                                    <div class="panel-heading">
                                        <div class="wow fadeInDown" data-wow-offset="0" data-wow-delay="0.1s">
                                            <h4 class="panel-title"><i class="fa fa-sign-in"></i> &nbsp;Existing Customer</h4>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="wow fadeInRight" data-wow-delay="0.1s">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                            <div class="form-group">
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email Address", title = "Please Enter a valid Email" } })
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="text-center col-xs-12" style="padding-bottom:5px; padding-top:5px">
                                                <button class="btn btn-primary" type="submit">Log In</button>
                                            </div>
                                            <div class="text-center col-xs-12" style="font-size:12px">
                                                Not Registered yet?
                                            </div>
                                            <div class="text-center col-xs-12" style="padding-bottom:10px">
                                                @Html.ActionLink("Create An Account", "Register", null, new { @class = "btn btn-primary create " })
                                            </div>
                                            <div class="text-center col-xs-12">
                                                <a>Forgot your password?</a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="col-xs-12 hidden-md hidden-lg" style="margin-top:20px">
                            <div class="wow fadeInDown" data-wow-offset="0" data-wow-delay="0.1s">
                                <h2 class="h-ultra">Book Now</h2>
                            </div>
                            <div class="well well-trans" style="padding-bottom:1px; border: 1px solid #ccc;border-left: 5px solid #004AAD;">
                                <div class="wow fadeInRight" data-wow-delay="0.1s">
                                    <ul class="lead-list">
                                        <li>
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    @*<h6 class="h-medium">Book Now</h6>*@
                                                </div>
                                                <div id="forFont">
                                                    <div class="col-xs-12" style="padding-bottom:10px">
                                                        You can either call, text or login to schedule a pickup date of your parcel.
                                                    </div>
                                                    <div class="col-xs-12 col-sm-6" style="margin-bottom:10px">
                                                        <div class="row">
                                                            <div class="col-xs-4">
                                                                <img src="~/img/photo/1.png" alt="Call" style="width:100%; height:auto;" width="180">
                                                            </div>
                                                            <div class="col-xs-8">
                                                                <p style="margin-bottom:0px;color:#3288c4"><b id="bol" style="color:#676767;">Call</b><br />(02)705 1071 <span style="color:#676767;">or</span><br />0923-180-7478</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-6" style="margin-bottom:20px">
                                                        <div class="row">
                                                            <div class="col-xs-4 ">
                                                                <img src="~/img/photo/2.png" alt="Text" style="width:100%; height:auto;" width="180">
                                                            </div>
                                                            <div class="col-xs-8">
                                                                <p style="margin-bottom:0px;color:#3288c4"><b id="bol" style="color:#676767;">Text</b><br />0917-538-8126</p>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div><br>
            </div>
        </div>
    
</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $("ul li:nth-child(6)").addClass("active");
        $(".navbar-main-collapse1 ul li:nth-child(1)").addClass("active");
        removeEffectOnNavbar();
    </script>
}
