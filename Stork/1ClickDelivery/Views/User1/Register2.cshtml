@model IEnumerable<_1ClickDelivery.Models.RegisteredUser>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="container">
        <div class="col-lg-12 text-center">
            <h1 class="section-heading">New Customer</h1>
            @*<h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>*@
            <form method="post" action="~/User/Register">
                <div class="row">
                    <div class="col-xs-12 ">
                        <div class="input-group">
                            @if (ViewBag.DuplicateEmail == "True")
                            {
                                <input type="text" class="form-control front-form" id="FirstName" name="FirstName" value="@ViewBag.FirstName" placeholder="First Name" /><br />
                                <input type="text" class="form-control front-form" id="LastName" name="LastName" placeholder="Last Name" /><br />
                                <input type="text" class="form-control front-form" id="Email" name="Email" placeholder="Email" /><br />
                                <input type="text" class="form-control front-form" id="PhoneNo" name="PhoneNo" placeholder="Phone No." /><br />
                                <input type="text" class="form-control front-form" id="Password" name="Password" placeholder="Password" /><br />
                                <input type="text" class="form-control front-form" placeholder="Confirm Password" /><br />
                                <span class="input-group-btn">
                                    <input type="submit" value="Sign Up" />
                                </span>
                            }
                            else
                            {
                                <input type="text" class="form-control front-form" id="FirstName" name="FirstName" placeholder="First Name" /><br />
                                @*<input type="text" class="form-control front-form" id="LastName" name="LastName" placeholder="Last Name" /><br />*@
                                
                                    @Html.DisplayNameFor(model => model.LastName)
                                
                                <input type="text" class="form-control front-form" id="Email" name="Email" placeholder="Email" /><br />
                                <input type="text" class="form-control front-form" id="PhoneNo" name="PhoneNo" placeholder="Phone No." /><br />
                                <input type="text" class="form-control front-form" id="Password" name="Password" placeholder="Password" /><br />
                                <input type="text" class="form-control front-form" placeholder="Confirm Password" /><br />
                                <span class="input-group-btn">
                                    <input type="submit" value="Sign Up" />
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</body>
</html>
