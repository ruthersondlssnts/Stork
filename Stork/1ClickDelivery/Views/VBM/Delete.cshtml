@model _1ClickDelivery.Models.VBM



<div class="container"  style="margin-top:200px;">
    <div class="row">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Delete Barangay</h4>
            <hr />
            <dl class="dl-horizontal">

                <dt>
                    Barangay Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.VBMName)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-primary" /> |
                    @Html.ActionLink("Back to List", "Details", "Area", new { id = Model.PKArea }, null)

                </div>
            }
        </div>
    </div>
</div>
@section Scripts {

    <script>
        $("footer").remove();
        $("#navbarCollapse li:nth-child(2)").addClass("active");
        removeEffectOnNavbar();
    </script>
}
