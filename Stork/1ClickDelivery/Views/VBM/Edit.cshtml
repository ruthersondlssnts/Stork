@model _1ClickDelivery.Models.VBM


<div class="container"  style="margin-top:200px;">
    <div class="row">
        <div class="col-xs-5">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Edit Barangay</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.PKVBM)

                    <div class="form-group" style="display:none">

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PKArea, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PKArea, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-12">
                            Barangay Name
                        </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.VBMName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.VBMName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Details", "Area", new { id = Model.PKArea }, null)
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $("footer").remove();
        $("#navbarCollapse li:nth-child(2)").addClass("active");
        removeEffectOnNavbar();
    </script>
}