@model _1ClickDelivery.Models.Area




<div class="container"  style="margin-top:180px;">
    <div class="row">
        <div class="col-xs-4">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Edit Area</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.PKArea)

                    <div class="form-group">
                        @Html.LabelFor(model => model.AreaName, htmlAttributes: new { @class = "control-label col-xs-2" })
                        @Html.EditorFor(model => model.AreaName, new { htmlAttributes = new { @class = "form-control col-xs-12" } })
                        @Html.ValidationMessageFor(model => model.AreaName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        removeEffectOnNavbar();
        $("#navbarCollapse li:nth-child(2)").addClass("active");
        $("footer").remove();
    </script>

}